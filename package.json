{
  "name": "check-disk-space",
  "version": "3.0.0",
  "description": "Light multi-platform disk space checker without third party for Node.js",
	"files": ["dist"],
  "main": "./dist/check-disk-space.cjs.js",
  "module": "./dist/check-disk-space.es.js",
  "types": "./dist/check-disk-space.d.ts",
	"exports": {
		".": {
			"import": "./dist/check-disk-space.es.js",
			"require": "./dist/check-disk-space.cjs.js"
		}
	},
  "scripts": {
    "build": "rollup -c",
    "build-types:clean": "del types",
    "build-types:tsc": "tsc --project tsconfig.types.json",
    "build-types:tsc-alias": "tsc-alias --project tsconfig.types.json",
    "build-types:api-extractor": "api-extractor run",
    "build-types": "npm-run-all build-types:clean build-types:tsc build-types:tsc-alias build-types:api-extractor build-types:clean",
    "unit-test": "ava --color",
    "lint": "xo",
    "test": "npm-run-all unit-test lint"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.15.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "ava": "^3.15.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.27.0",
    "eslint-plugin-ava": "^12.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.48.0",
    "tsc-alias": "^1.2.11",
    "typescript": "^4.2.4",
    "xo": "^0.40.1"
  },
  "xo": {
    "space": true,
    "semicolon": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alex-D/check-disk-space.git"
  },
  "keywords": [
    "disk",
    "space",
    "hdd",
    "free"
  ],
  "author": "Alex-D <contact@alex-d.fr> (http://alex-d.fr)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Alex-D/check-disk-space/issues"
  },
  "homepage": "https://github.com/Alex-D/check-disk-space#readme"
}
